{
    "compilerOptions": {
        "lib": ["DOM", "esnext", "ScriptHost"],
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "importHelpers": false,
        "esModuleInterop": true,
        "module": "es2020",
        "rootDir": "src",
        "strict": true,
        "noImplicitAny": false,
        "skipLibCheck": true,
        "target": "es5",
        "moduleResolution": "node",
        "isolatedModules": true
    },
    "include": [
        "src", "types"
    ]
}